<div class="container">
  <h1>Edit Section Name</h1>
  <%= simple_form_for [@standard, @section], wrapper: :horizontal_form, html: {class: "form-horizontal"} do |f| %>
  <%= f.input :name %>
  <%= f.submit "Change Name", class: "btn btn-default col-sm-offset-3" %>
  <%= link_to "Cancel", :back, class: "btn btn-default" %>
  <% end %>
</div>
