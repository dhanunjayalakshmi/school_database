
<div class="container">
  <h1>
    Students belonging to <%= @section ? @section.display_name : @house.name %>
  </h1>
  <p>
    <% if @students.length > 0 %>
    The total number of students in <%= @section ? @section.display_name : @house.name %> is
    <%= @students.length %>
    <% else %>
    There are no students in <%= @section ? @section.display_name : @house.name %>
    <% end %>
  </p>
  <h1>Standards</h1>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Gender</th>
        <th>Father's Name</th>
        <th>Emergency contact</th>
        <th>Date of Birth</th>
        <th>Blood Type</th>
        <th>Section_ID</th>
        <th>House_ID</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.name %></td>
        <td><%= student.address %></td>
        <td><%= student.gender %></td>
        <td><%= student.fathers_name %></td>
        <td><%= student.emergency_contact %></td>
        <td><%= student.dob %></td>
        <td><%= student.blood_type %></td>
        <td><%= student.section_id %></td>
        <td><%= student.house_id %></td>
        <td><%= link_to "Delete", student_path(student), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %></td>
        <td><%= link_to "Edit", edit_student_path(student), class: "btn btn-default" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add New Student", new_student_path, class: "btn btn-primary" %><br>
</div>
