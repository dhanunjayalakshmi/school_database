<div class="container">
  <h1>Edit Student Details</h1>
  <%= simple_form_for @student, wrapper: :horizontal_form, html: {class: "form-horizontal"} do |f| %>
  <%= f.input :roll_no %>
  <%= f.input :name %>
  <%= f.input :section_id, collection: Section.all, include_blank: false, label_method: :display_name, value_method: :id %>
  <%= f.input :house_id, collection: House.all, include_blank: false, label_method: :name, value_method: :id %>
  <%= f.input :address, required: true %>
  <%= f.input :gender, collection: Student::Gender.all, include_blank: false, label_method: :label, value_method: :code, required: true %>
  <%= f.input :dob, as: :date, html5: true %>
  <%= f.input :fathers_name, required: true %>
  <%= f.input :emergency_contact, required: true %>
  <%= f.input :blood_type, collection: Student::BloodType.all, include_blank: false, label_method: :label, label: "Blood Type", value_method: :code, required: true %>
  <%= f.submit "Change Details", class: "btn btn-default col-sm-offset-3" %>
  <%= link_to "Cancel", :back, class: "btn btn-primary"%>
  <% end %>
</div>
