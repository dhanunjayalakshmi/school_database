<div class="container">
  <h1>Add New Standard</h1>
  <%= simple_form_for @standard, wrapper: :horizontal_form, html: {class: "form-horizontal"} do |f|%>
  <%= f.input :name, required: true %>
  <%= f.submit "Add New Standard", class: "btn btn-primary col-sm-offset-3" %>
  <%= link_to "Cancel", standards_path, class: "btn btn-primary" %>
  <% end %>
</div>
