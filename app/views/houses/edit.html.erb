<div class="container">
<h1>Update House Name</h1>
<%= simple_form_for @house, wrapper: :horizontal_form, html: {class: "form-horizontal"} do |f| %>
<%= f.input :name %>
<%= f.submit "Confirm Changes", class: "btn btn-primary col-sm-offset-3" %>
<%= link_to "Cancel", :back, class: "btn btn-primary" %>
<% end %>

</div>
