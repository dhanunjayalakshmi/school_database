<div class="container">
  <h1>Add New House</h1>
  <%= simple_form_for @house, wrapper: :horizontal_form, html: {class: "form-horizontal"} do |f| %>
  <%= f.input :name, required: true %>
  <%= f.submit "Add House", class: "btn btn-primary col-sm-offset-3" %>
  <%= link_to "Cancel", houses_path, class: "btn btn-primary" %>
  <% end %>
</div>
